{
    "name": "lost-found-app",
    "version": "1.0.0",
    "description": "A full-stack web application for managing lost and found items",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "build": "cd frontend && npm run build",
        "start": "cd backend && npm start",
        "test": "echo \"No tests specified\" && exit 0",
        "ci": "npm run install:all && npm run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    },
    "keywords": [
        "lost",
        "found",
        "react",
        "express",
        "firebase",
        "firestore"
    ],
    "author": "",
    "license": "MIT"
}